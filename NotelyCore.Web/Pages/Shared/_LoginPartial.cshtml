@using Microsoft.AspNetCore.Identity
@using NotelyCore.Persistence.Identity

@inject SignInManager<NotelyUser> SignInManager
@inject UserManager<NotelyUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a style="padding-top: 9px;" id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a style="padding-top: 9px;" class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Register">Register</a>
    </li>
    <li class="nav-item">
        <a style="padding-top: 9px;" class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Login">Login</a>
    </li>
}
</ul>
